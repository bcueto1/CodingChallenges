
public class TripleLiftianNumbers {
	
	private static int t0 = 6;
	private static int t1 = 7;
	private static int t2 = 2;
	
	private static int solveEquation() {
		return (4 * t2) - (5 * t1) + (3 * t0);
	}
	
    public static int TripleLiftianNumber(int myNumber) {
    	int counter = myNumber;
        int solution = 0;
    	while (counter != 3) {
    	    t2 = TripleLiftianNumber(myNumber - 1);
    	    counter--;
    	}
    	solution = solveEquation();
    	t0 = t1;
    	t1 = t2;
    	return solution;
    }
    
    public static void main(String[] args) {
        System.out.println(TripleLiftianNumber(4));
    }
}
